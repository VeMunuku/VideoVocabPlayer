{
    "manifest_version": 2,
    "name": "Video Vocabulary Player",
    "description": "This extension displays vocabulary from the subtitles, when the video is paused.",
    "version": "1.0",
    "icons": {
      "128": "icon128.png",
      "48": "icon48.png",
      "16": "icon16.png"
    },

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
       "scripts": ["constants.js", "eventPage.js"],
       "persistent": false
    },

    "content_scripts" : [
      {
        "matches" : ["<all_urls>"],
        "js":["content.js", "jquery-3.1.0.min.js","overlay.js"],
        "css": ["overlay.css"]
      }
    ],

    "options_page": "options.html",

    "permissions":[
      "http://*/*",
      "https://*/*",
      "tabs",
      "storage",
      "contextMenus"
    ]
}